@model Post
@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center">Delete post</h1>

<p>Are you sure you want to delete this post permanently?</p>


<h2>@Model.Title</h2>

<img src="@Model.ImageUrl" alt="Alternate Text" width="200" />

<p>@Model.Text</p>


<form asp-action="Delete" asp-controller="Posts" asp-area="Admin" method="post">
    <input type="hidden" asp-for="Id" />
        <button>Delete</button>
</form>
<a asp-action="Index" asp-controller="Posts" asp-area="Admin">Back</a>
