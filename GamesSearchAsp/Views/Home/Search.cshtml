@model GameListApiResponse


@{
    ViewData["Title"] = "Search";
}

<div class="row">
    @if (Model.count <= 0)
    {
        <p>Games not found</p>
    }

    @foreach (var item in Model.results)
    {
        <div class="card col-md-4">
            <img src="@(item.background_image ?? "/images/placeholder.jpg")" class="card-img-top" alt="..." onerror="event.target.src = '/images/placeholder.jpg'">
            <div class="card-body">
                <h5 class="card-title">@item.name</h5>
                <a asp-controller="Home" asp-action="GameDetails" asp-route-id="@item.id" class="btn btn-primary">Details</a>
            </div>
        </div>
    }
</div>
